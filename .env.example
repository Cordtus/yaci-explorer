# Derived connection string for reset guard / scripts (leave blank to auto-build)
RESET_GUARD_DB_URI=
# Set to true automatically by scripts/configure-env.sh after prompting once
SKIP_ENV_PROMPTS=false

# PostgREST API
PGRST_DB_SCHEMA=api
POSTGREST_PORT=3000
POSTGREST_URL=http://localhost:3000
POSTGREST_PROXY_URI=http://localhost:3000
POSTGREST_URL=/api
CHAIN_REST_ENDPOINT=http://localhost:1317
CHAIN_GRPC_ENDPOINT=16.16.50.2:9090
CHAIN_RPC_ENDPOINT=http://16.16.50.2:26657
CHAIN_ID=republic_77001-1
CHAIN_NAME=Republic AI

# Yaci Indexer Configuration
# Use 'latest' for latest version, or specify version like 'v1.0.0'
YACI_IMAGE=ghcr.io/cordtus/yaci:main
YACI_MAX_CONCURRENCY=100
YACI_LOG_LEVEL=info
YACI_INSECURE=-k
YACI_METRICS_PORT=2112

# Explorer UI Port, used in Docker Compose
EXPLORER_PORT=3001

# Tanstack Query
QUERY_STALE_MS=10000
QUERY_GC_MS=300000

# Transction page config
TX_PAGE_SIZE=20

# Search config
SEARCH_ADDRESS_LIMIT=20
SEARCH_AUTO_NAVIGATE_SINGLE=true

# Analytics page config
ANALYTICS_VOLUME_HOURS=24
ANALYTICS_VOLUME_REFRESH_MS=60000
ANALYTICS_MESSAGE_SAMPLE_LIMIT=10000
ANALYTICS_MESSAGE_TOPN=10
ANALYTICS_MESSAGE_REFRESH_MS=60000
ANALYTICS_BLOCK_INTERVAL_LOOKBACK=100
ANALYTICS_BLOCK_INTERVAL_REFRESH_MS=30000
ANALYTICS_BLOCK_INTERVAL_MAX_SECONDS=100
ANALYTICS_NETWORK_BLOCK_WINDOW=100
ANALYTICS_NETWORK_TX_WINDOW=1000
ANALYTICS_NETWORK_MSG_WINDOW=2000
ANALYTICS_NETWORK_REFRESH_MS=10000

# Reset config
RESET_NOTICE_ENABLED=true
RESET_NOTICE_REFETCH_MS=30000
RESET_NOTICE_HASH_CHECK_HEIGHT=5
ENABLE_CHAIN_RESET_GUARD=false
RESET_GUARD_RPC_ENDPOINT=
RESET_GUARD_AUTO_TRUNCATE=true

# Branding (optional - leave blank to use defaults)
VITE_LOGO_URL=
LINK_WEBSITE=
LINK_DOCS=
LINK_GITHUB=
LINK_DISCORD=
LINK_TWITTER=
